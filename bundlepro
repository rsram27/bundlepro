#!/bin/bash

# ============================================
# Bundle Pro - bundlepro
# Versao: 1.2.0
# ============================================

# Cores para output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
NC='\033[0m' # No Color

# Configuração
CONFIG_DIR="$HOME/.bundlepro"
CONFIG_FILE="$CONFIG_DIR/config"

# Variaveis de controle
CREATE_JOB=false
CREATE_DASHBOARD=false

# ============================================
# FUNCOES DE CONFIGURACAO
# ============================================

# Verificar e carregar configuração
load_config() {
    if [ ! -f "$CONFIG_FILE" ]; then
        echo -e "${RED}[ERRO] Configuração não encontrada!${NC}"
        echo ""
        echo -e "${CYAN}Execute 'bundlepro configure' para configurar o workspace e autenticação.${NC}"
        exit 1
    fi
    source "$CONFIG_FILE"
    
    if [ -z "$DATABRICKS_HOST" ] || [ -z "$DATABRICKS_TOKEN" ]; then
        echo -e "${RED}[ERRO] Configuração incompleta!${NC}"
        echo ""
        echo -e "${CYAN}Execute 'bundlepro configure' para atualizar as configurações.${NC}"
        exit 1
    fi
}

# Configurar workspace e autenticação
configure_bundlepro() {
    echo -e "${GREEN}========================================${NC}"
    echo -e "${GREEN}Configuração do Bundle Pro${NC}"
    echo -e "${GREEN}========================================${NC}"
    echo ""
    
    mkdir -p "$CONFIG_DIR"
    
    # Solicitar Workspace
    echo -e "${CYAN}Endereço do Workspace Databricks${NC}"
    echo "Exemplo: https://dbc-12345678-9abc.cloud.databricks.com"
    read -p "Host: " DATABRICKS_HOST
    
    if [ -z "$DATABRICKS_HOST" ]; then
        echo -e "${RED}[ERRO] Host não pode estar vazio!${NC}"
        exit 1
    fi
    
    # Solicitar Token
    echo ""
    echo -e "${CYAN}Token de Autenticação Databricks${NC}"
    echo "Gere em: Settings > User Settings > Access Tokens"
    read -sp "Token: " DATABRICKS_TOKEN
    echo ""
    
    if [ -z "$DATABRICKS_TOKEN" ]; then
        echo -e "${RED}[ERRO] Token não pode estar vazio!${NC}"
        exit 1
    fi

    # Solicitar Email
    echo ""
    echo -e "${CYAN}Email para notificações de Job${NC}"
    read -p "Email: " DATABRICKS_EMAIL
    
    # Salvar configuração
    cat > "$CONFIG_FILE" << CONFIGEOF
#!/bin/bash
# Bundle Pro Configuration
# Generated: $(date)

export DATABRICKS_HOST="$DATABRICKS_HOST"
export DATABRICKS_TOKEN="$DATABRICKS_TOKEN"
export DATABRICKS_EMAIL="$DATABRICKS_EMAIL"
CONFIGEOF
    
    chmod 600 "$CONFIG_FILE"
    
    echo ""
    echo -e "${GREEN}[OK] Configuração salva em $CONFIG_FILE${NC}"
    echo ""
    echo -e "${CYAN}Próximas ações:${NC}"
    echo "1. Clone o repositório: git clone git@github.com:<your-git-username>/<your-bundle-pro-repo>.git ~/bundlepro"
    echo "2. Instale: cd ~/bundlepro && bash install.sh"
    echo "3. Clone o repositório de projetos: git clone git@github.com:<your-git-username>/<your-projects-repo>.git ~/<your-projects-repo>"
    echo "4. Configure o repositório de projetos: bundlepro configure-projects-repo ~/<your-projects-repo>"
}

# Configurar o repositório de projetos
configure_projects_repo() {
    echo -e "${GREEN}========================================${NC}"
    echo -e "${GREEN}Configuração do Repositório de Projetos${NC}"
    echo -e "${GREEN}========================================${NC}"
    echo ""
    
    if [ -z "$1" ]; then
        echo -e "${RED}[ERRO] O caminho para o repositório de projetos é obrigatório!${NC}"
        echo ""
        echo -e "${CYAN}Uso:${NC}"
        echo "  bundlepro configure-projects-repo <caminho-para-o-repositorio-de-projetos>"
        echo ""
        echo -e "${CYAN}Exemplo:${NC}"
        echo "  bundlepro configure-projects-repo ~/<your-projects-repo>"
        exit 1
    fi
    
    PROJECTS_REPO_PATH=$(eval echo "$1")
    
    if [ ! -d "$PROJECTS_REPO_PATH" ]; then
        echo -e "${RED}[ERRO] O diretório '$PROJECTS_REPO_PATH' não existe!${NC}"
        exit 1
    fi
    
    echo "export PROJECTS_DIR_NAME='$PROJECTS_REPO_PATH'" >> "$CONFIG_FILE"
    
    echo ""
    echo -e "${GREEN}[OK] Repositório de projetos configurado em $CONFIG_FILE${NC}"
}


# ============================================
# FUNCOES DE PROJETO
# ============================================

# Banner
show_banner() {
    echo -e "${GREEN}"
    echo "========================================"
    echo "  Bundle Pro - DAB Bundle Setup"
    echo "========================================"
    echo -e "${NC}"
}

# Uso
show_usage() {
    echo -e "${CYAN}Uso:${NC}"
    echo "  bundlepro <nome-do-projeto>"
    echo "  bundlepro configure"
    echo "  bundlepro configure-projects-repo <caminho-para-o-repositorio-de-projetos>"
    echo "  bundlepro --version"
    echo "  bundlepro --help"
    echo ""
    echo -e "${CYAN}Exemplos:${NC}"
    echo "  bundlepro sap-data-pipeline"
    echo "  bundlepro vendas-analytics"
    echo ""
    echo -e "${CYAN}Requisitos:${NC}"
    echo "  - Executar dentro do seu repositorio de projetos (git clone)"
    echo "  - Executar 'bundlepro configure' antes de usar"
    echo ""
    echo -e "${CYAN}Comportamento:${NC}"
    echo "  - Cria automaticamente a branch: feature/<nome-do-projeto>"
    echo "  - Cada projeto deve ter sua propria branch"
    echo ""
}

# Versao
show_version() {
    echo "bundlepro versao 1.2.0"
    echo "Bundle Pro - Data Engineering"
}

# Verificar se estamos em um repositorio git
check_git_repository() {
    if ! git rev-parse --git-dir > /dev/null 2>&1; then
        echo -e "${RED}[ERRO] Nao esta em um repositorio Git!${NC}"
        echo ""
        echo -e "${CYAN}Entre no seu repositorio de projetos e tente novamente:${NC}"
        echo "  cd ~/$PROJECTS_DIR_NAME"
        echo "  bundlepro $1"
        echo ""
        exit 1
    fi
}

# Verificar se estamos no diretorio de projetos
check_projects_directory() {
    if [ "$(pwd)" != "$PROJECTS_DIR_NAME" ]; then
        echo -e "${RED}[ERRO] Este comando deve ser executado a partir do diretorio de projetos!${NC}"
        echo ""
        echo -e "${CYAN}Entre no seu repositorio de projetos e tente novamente:${NC}"
        echo "  cd ~/$PROJECTS_DIR_NAME"
        echo "  bundlepro $1"
        echo ""
        exit 1
    fi
}

# Verificar e criar branch
check_and_create_branch() {
    FEATURE_BRANCH="feature/$1"
    CURRENT_BRANCH=$(git branch --show-current 2>/dev/null)

    # Verificar se a branch develop existe
    if ! git show-ref --verify --quiet "refs/heads/develop" 2>/dev/null; then
        echo -e "${YELLOW}[AVISO] A branch 'develop' não existe.${NC}"
        echo -e "${CYAN}Criando branch 'develop'...${NC}"

        # Criar develop a partir de main/master
        if git show-ref --verify --quiet "refs/heads/main" 2>/dev/null; then
            git checkout main
            git checkout -b develop
        elif git show-ref --verify --quiet "refs/heads/master" 2>/dev/null; then
            git checkout master
            git checkout -b develop
        else
            echo -e "${RED}[ERRO] Não foi possível encontrar branch main ou master!${NC}"
            exit 1
        fi

        echo -e "${GREEN}[OK] Branch 'develop' criada${NC}"
        echo -e "${CYAN}Envie para o repositório remoto:${NC} git push origin develop"
        echo ""
    fi

    # Se estiver em main/master, avisar para usar develop
    if [ "$CURRENT_BRANCH" == "main" ] || [ "$CURRENT_BRANCH" == "master" ]; then
        echo -e "${YELLOW}[AVISO] Você está na branch ${CURRENT_BRANCH}${NC}"
        echo -e "${CYAN}Mudando para develop para criar a feature...${NC}"
        git checkout develop
        git pull origin develop 2>/dev/null || true
        CURRENT_BRANCH="develop"
    fi

    # Se estiver em develop, criar a feature branch
    if [ "$CURRENT_BRANCH" == "develop" ]; then
        echo -e "${CYAN}Branch atual: ${CURRENT_BRANCH}${NC}"

        # Verificar se a feature branch ja existe
        if git show-ref --verify --quiet "refs/heads/$FEATURE_BRANCH" 2>/dev/null; then
            echo -e "${YELLOW}[AVISO] A branch '${FEATURE_BRANCH}' ja existe.${NC}"
            echo -e "${CYAN}Mudando para a branch existente...${NC}"
            git checkout "$FEATURE_BRANCH"
            echo -e "${GREEN}[OK] Usando branch: ${FEATURE_BRANCH}${NC}"
        else
            echo -e "${CYAN}Criando branch: ${FEATURE_BRANCH} a partir de develop...${NC}"
            git checkout -b "$FEATURE_BRANCH"
            echo -e "${GREEN}[OK] Branch criada: ${FEATURE_BRANCH}${NC}"
        fi
    # Se estiver em outra feature branch, criar nova
    elif [[ "$CURRENT_BRANCH" == feature/* ]]; then
        # Se ja esta na branch correta do projeto, continuar
        if [ "$CURRENT_BRANCH" == "$FEATURE_BRANCH" ]; then
            echo -e "${GREEN}[OK] Ja esta na branch: ${FEATURE_BRANCH}${NC}"
        else
            # Esta em outra feature branch, voltar para develop e criar nova
            echo -e "${YELLOW}[AVISO] Voce esta na branch: ${CURRENT_BRANCH}${NC}"
            echo -e "${CYAN}Voltando para develop...${NC}"
            git checkout develop
            git pull origin develop 2>/dev/null || true

            # Verificar se a feature branch ja existe
            if git show-ref --verify --quiet "refs/heads/$FEATURE_BRANCH" 2>/dev/null; then
                echo -e "${YELLOW}[AVISO] A branch '${FEATURE_BRANCH}' ja existe.${NC}"
                echo -e "${CYAN}Mudando para a branch existente...${NC}"
                git checkout "$FEATURE_BRANCH"
                echo -e "${GREEN}[OK] Usando branch: ${FEATURE_BRANCH}${NC}"
            else
                echo -e "${CYAN}Criando branch: ${FEATURE_BRANCH}...${NC}"
                git checkout -b "$FEATURE_BRANCH"
                echo -e "${GREEN}[OK] Branch criada: ${FEATURE_BRANCH}${NC}"
            fi
        fi
    else
        # Branch desconhecida, voltar para develop
        echo -e "${YELLOW}[AVISO] Branch atual: ${CURRENT_BRANCH}${NC}"
        echo -e "${CYAN}Voltando para develop...${NC}"
        git checkout develop
        git pull origin develop 2>/dev/null || true

        # Verificar se a feature branch ja existe
        if git show-ref --verify --quiet "refs/heads/$FEATURE_BRANCH" 2>/dev/null; then
            echo -e "${YELLOW}[AVISO] A branch '${FEATURE_BRANCH}' ja existe.${NC}"
            echo -e "${CYAN}Mudando para a branch existente...${NC}"
            git checkout "$FEATURE_BRANCH"
            echo -e "${GREEN}[OK] Usando branch: ${FEATURE_BRANCH}${NC}"
        else
            echo -e "${CYAN}Criando branch: ${FEATURE_BRANCH}...${NC}"
            git checkout -b "$FEATURE_BRANCH"
            echo -e "${GREEN}[OK] Branch criada: ${FEATURE_BRANCH}${NC}"
        fi
    fi

    echo ""
}

# Perguntas interativas
ask_create_job() {
    echo ""
    read -p "Deseja criar um Job para este projeto? (S/n): " RESP
    if [ "$RESP" != "n" ] && [ "$RESP" != "N" ]; then
        CREATE_JOB=true
    else
        CREATE_JOB=false
    fi
}

# Pergunta sobre criação de dashboard
ask_create_dashboard() {
    echo ""
    read -p "Deseja criar um Dashboard para este projeto? (S/n): " RESP
    if [ "$RESP" != "n" ] && [ "$RESP" != "N" ]; then
        CREATE_DASHBOARD=true
    else
        CREATE_DASHBOARD=false
    fi
}

# Criar arquivo de job
create_job_file() {
    echo -e "  ${CYAN}[CRIANDO]${NC} resources/jobs.yml"
    cat > "$PROJECT_DIR/resources/jobs.yml" << 'JOBEOF'
resources:
  jobs:
    notebook_job:
      name: "[${bundle.target}] ${bundle.name} Job"
      
      tasks:
        - task_key: run_notebook
          notebook_task:
            notebook_path: ../src/notebook.py
            base_parameters:
              catalog: ${var.catalog}
              environment: ${bundle.target}
          
          existing_cluster_id: ${var.cluster_id}
                    
      schedule:
        quartz_cron_expression: "0 0 6 * * ?"
        timezone_id: "America/Sao_Paulo"
        pause_status: PAUSED
      
      email_notifications:
        on_failure:
          - ${DATABRICKS_EMAIL}
      
      max_concurrent_runs: 1
      timeout_seconds: 7200
JOBEOF
}

# Criar arquivo de dashboard
create_dashboard_file() {
    echo -e "  ${CYAN}[CRIANDO]${NC} resources/dashboards.yml"
    cat > "$PROJECT_DIR/resources/dashboards.yml" << 'DASHBOARDEOF'
resources:
  dashboards:
    analytics_dashboard:
      display_name: "[${bundle.target}] ${bundle.name} Dashboard"
      file_path: ../src/dashboard.lvdash.json
      warehouse_id: ${var.warehouse_id}
      embed_credentials: false

      permissions:
        - level: CAN_MANAGE
          group_name: admins
        - level: CAN_RUN
          group_name: developers
        - level: CAN_VIEW
          group_name: users
DASHBOARDEOF
}

# Criar arquivo JSON do dashboard
create_dashboard_json() {
    echo -e "  ${CYAN}[CRIANDO]${NC} src/dashboard.lvdash.json"
    cat > "$PROJECT_DIR/src/dashboard.lvdash.json" << 'DASHBOARDJSONEOF'
{
  "pages": [
    {
      "name": "overview",
      "displayName": "Overview",
      "layout": [
        {
          "widget": {
            "name": "sample_query",
            "textbox_spec": "# ${bundle.name} Dashboard\n\nEste dashboard foi criado pelo bundlepro.\n\n## Parametros\n- Warehouse: ${var.warehouse_id}\n- Environment: ${bundle.target}"
          },
          "position": {
            "x": 0,
            "y": 0,
            "width": 6,
            "height": 4
          }
        }
      ]
    }
  ],
  "datasets": []
}
DASHBOARDJSONEOF
}

# Criar README
create_readme() {
    echo -e "  ${CYAN}[CRIANDO]${NC} README.md"
    
    cat > "$PROJECT_DIR/README.md" << READMEEOF
# ${PROJECT_NAME}

Projeto criado com bundlepro.

## Estrutura

READMEEOF

    echo '```' >> "$PROJECT_DIR/README.md"
    echo "${PROJECT_NAME}/" >> "$PROJECT_DIR/README.md"
    echo "├── databricks.yml    # Configuracao do bundle" >> "$PROJECT_DIR/README.md"
    echo "├── src/" >> "$PROJECT_DIR/README.md"
    echo "│   └── notebook.py   # Notebook principal" >> "$PROJECT_DIR/README.md"

    if [ "$CREATE_DASHBOARD" == "true" ]; then
        echo "│   └── dashboard.lvdash.json  # Definicao do dashboard" >> "$PROJECT_DIR/README.md"
    fi

    if [ "$CREATE_JOB" == "true" ] || [ "$CREATE_DASHBOARD" == "true" ]; then
        echo "├── resources/" >> "$PROJECT_DIR/README.md"
        if [ "$CREATE_JOB" == "true" ]; then
            echo "│   └── jobs.yml      # Definicao do job" >> "$PROJECT_DIR/README.md"
        fi
        if [ "$CREATE_DASHBOARD" == "true" ]; then
            echo "│   └── dashboards.yml   # Definicao do dashboard" >> "$PROJECT_DIR/README.md"
        fi
    fi
    
    echo "└── README.md" >> "$PROJECT_DIR/README.md"
    echo '```' >> "$PROJECT_DIR/README.md"
    
    cat >> "$PROJECT_DIR/README.md" << READMEEOF

## Comandos

READMEEOF

    echo '```bash' >> "$PROJECT_DIR/README.md"
    echo "# Validar" >> "$PROJECT_DIR/README.md"
    echo "databricks bundle validate -t dev" >> "$PROJECT_DIR/README.md"
    echo "" >> "$PROJECT_DIR/README.md"
    echo "# Deploy" >> "$PROJECT_DIR/README.md"
    echo "databricks bundle deploy -t dev" >> "$PROJECT_DIR/README.md"
    
    if [ "$CREATE_JOB" == "true" ]; then
        echo "" >> "$PROJECT_DIR/README.md"
        echo "# Executar job" >> "$PROJECT_DIR/README.md"
        echo "databricks bundle run -t dev notebook_job" >> "$PROJECT_DIR/README.md"
    fi

    if [ "$CREATE_DASHBOARD" == "true" ]; then
        echo "" >> "$PROJECT_DIR/README.md"
        echo "# Acessar dashboard (URL sera exibida apos deploy)" >> "$PROJECT_DIR/README.md"
    fi

    echo '```' >> "$PROJECT_DIR/README.md"
}

# Criar arquivo de instrucoes
create_instructions_file() {
    local ACTUAL_BRANCH=$(git branch --show-current 2>/dev/null)
    
    echo -e "  ${CYAN}[CRIANDO]${NC} INSTRUCOES.txt"
    
    cat > "$PROJECT_DIR/INSTRUCOES.txt" << INSTREOF
========================================
INSTRUCOES DE USO - ${PROJECT_NAME}
========================================

Projeto criado em: $(date '+%Y-%m-%d %H:%M:%S')
Branch: ${ACTUAL_BRANCH}
Job criado: $([ "$CREATE_JOB" == "true" ] && echo "Sim" || echo "Nao")
Dashboard criado: $([ "$CREATE_DASHBOARD" == "true" ] && echo "Sim" || echo "Nao")

========================================
PASSO A PASSO
========================================

1. ENTRAR NO DIRETORIO DO PROJETO
   
   cd ${PROJECT_NAME}

2. EDITAR ARQUIVOS
   
   Edite o notebook principal:
   nano src/notebook.py

INSTREOF

    if [ "$CREATE_JOB" == "true" ]; then
        cat >> "$PROJECT_DIR/INSTRUCOES.txt" << INSTREOF
   Edite a configuracao do job (schedule, cluster, etc):
   nano resources/jobs.yml

INSTREOF
    fi

    if [ "$CREATE_DASHBOARD" == "true" ]; then
        cat >> "$PROJECT_DIR/INSTRUCOES.txt" << INSTREOF
   Edite a configuracao do dashboard:
   nano resources/dashboards.yml
   nano src/dashboard.lvdash.json

INSTREOF
    fi

    cat >> "$PROJECT_DIR/INSTRUCOES.txt" << INSTREOF
   Edite o databricks.yml se necessario:
   nano databricks.yml

3. VALIDAR O BUNDLE
   
   databricks bundle validate -t dev

4. TESTAR EM DEV
   
   databricks bundle deploy -t dev

INSTREOF

    if [ "$CREATE_JOB" == "true" ]; then
        cat >> "$PROJECT_DIR/INSTRUCOES.txt" << INSTREOF
   databricks bundle run -t dev notebook_job
INSTREOF
    fi

    cat >> "$PROJECT_DIR/INSTRUCOES.txt" << INSTREOF

5. COMMIT E PUSH PARA O REPOSITORIO
   
   git add .
   git commit -m 'Add: ${PROJECT_NAME}'
   git push origin ${ACTUAL_BRANCH}

6. DEPLOY PARA O WORKSPACE DE DESENVOLVIMENTO
   
   Faça deploy da feature branch para validar no workspace DEV:
   
   databricks bundle deploy -t dev

7. MERGE COM DEVELOP (OBRIGATÓRIO)

   Após validar na feature, faça merge com develop:

   git checkout develop
   git pull origin develop
   git merge feature/${PROJECT_NAME}
   git push origin develop

8. TESTAR EM DEVELOP

   Valide novamente no ambiente de desenvolvimento:

   databricks bundle deploy -t dev

9. MERGE COM MAIN (PRODUÇÃO)

   Após validação em develop, faça merge com main:

   git checkout main
   git pull origin main
   git merge develop
   git push origin main

10. DEPLOY PARA PRODUCAO

   Apos merge em main, faça deploy em producao:

   databricks bundle deploy -t prod

========================================
COMANDOS UTEIS
========================================

# Validar bundle
databricks bundle validate -t dev

# Deploy para DEV (durante desenvolvimento)
databricks bundle deploy -t dev

# Deploy para PROD (apos merge em main)
databricks bundle deploy -t prod

INSTREOF

    if [ "$CREATE_JOB" == "true" ]; then
        cat >> "$PROJECT_DIR/INSTRUCOES.txt" << INSTREOF
# Executar job manualmente
databricks bundle run -t dev notebook_job

INSTREOF
    fi

    cat >> "$PROJECT_DIR/INSTRUCOES.txt" << INSTREOF
# Ver logs e debug
databricks bundle run -t dev notebook_job --debug

========================================
ARQUIVOS DO PROJETO
========================================

databricks.yml      - Configuracao do bundle
src/notebook.py     - Notebook principal
INSTREOF

    if [ "$CREATE_JOB" == "true" ]; then
        cat >> "$PROJECT_DIR/INSTRUCOES.txt" << INSTREOF
resources/jobs.yml  - Definicao do job
INSTREOF
    fi

    if [ "$CREATE_DASHBOARD" == "true" ]; then
        cat >> "$PROJECT_DIR/INSTRUCOES.txt" << INSTREOF
resources/dashboards.yml     - Definicao do dashboard
src/dashboard.lvdash.json    - JSON do dashboard
INSTREOF
    fi

    cat >> "$PROJECT_DIR/INSTRUCOES.txt" << INSTREOF
README.md           - Documentacao do projeto
INSTRUCOES.txt      - Este arquivo (nao commitado)

========================================
CONTATO
========================================

Em caso de duvidas, contate:
Time Data Engineering - Bundle Pro

========================================
INSTREOF
}

# ============================================
# INICIO DO SCRIPT
# ============================================

# Opcoes especiais
if [ "$1" == "configure" ]; then
    configure_bundlepro
    exit 0
fi

if [ "$1" == "configure-projects-repo" ]; then
    configure_projects_repo "$2"
    exit 0
fi

if [ "$1" == "--version" ] || [ "$1" == "-v" ]; then
    show_version
    exit 0
fi

if [ "$1" == "--help" ] || [ "$1" == "-h" ]; then
    show_banner
    show_usage
    exit 0
fi

if [ -z "$1" ]; then
    show_banner
    echo -e "${RED}[ERRO] Nome do projeto e obrigatorio!${NC}"
    echo ""
    show_usage
    exit 1
fi

PROJECT_NAME="$1"
PROJECT_DIR="$(pwd)/$PROJECT_NAME"

if [[ ! "$PROJECT_NAME" =~ ^[a-zA-Z0-9_-]+$ ]]; then
    echo -e "${RED}[ERRO] Nome do projeto invalido!${NC}"
    echo -e "${YELLOW}Use apenas: letras, numeros, hifens (-) e underscores (_)${NC}"
    exit 1
fi

show_banner

# Carregar configuração
load_config

# Exportar variaveis para bundle
export DATABRICKS_HOST
export DATABRICKS_TOKEN

# Verificar diretorio
check_git_repository
check_projects_directory "$PROJECT_NAME"

# Verificar e criar branch automaticamente
check_and_create_branch "$PROJECT_NAME"

echo ""
echo -e "${BLUE}Projeto:${NC} ${PROJECT_NAME}"
echo -e "${BLUE}Destino:${NC} ${PROJECT_DIR}"

if [ -d "$PROJECT_DIR" ]; then
    echo ""
    echo -e "${RED}[ERRO] O projeto '${PROJECT_NAME}' ja existe em:${NC}"
    echo -e "   ${PROJECT_DIR}"
    exit 1
fi

# Pergunta interativa
ask_create_job

# Pergunta interativa - Dashboard
ask_create_dashboard

# Criar estrutura do projeto
echo ""
echo -e "${CYAN}Criando estrutura do projeto...${NC}"
mkdir -p "$PROJECT_DIR/src"
if [ "$CREATE_JOB" == "true" ] || [ "$CREATE_DASHBOARD" == "true" ]; then
    mkdir -p "$PROJECT_DIR/resources"
fi

# Criar databricks.yml
echo -e "  ${CYAN}[CRIANDO]${NC} databricks.yml"

# Construir seção de includes
INCLUDES=""
if [ "$CREATE_JOB" == "true" ] || [ "$CREATE_DASHBOARD" == "true" ]; then
    INCLUDES="include:\n  - resources/*.yml\n\n"
fi

# Construir seção de variáveis
VARIABLES="variables:\n  catalog:\n    description: \"Catalog name for the environment\""

if [ "$CREATE_JOB" == "true" ]; then
    VARIABLES="${VARIABLES}\n  cluster_id:\n    description: \"Cluster ID for job execution\""
fi

if [ "$CREATE_DASHBOARD" == "true" ]; then
    VARIABLES="${VARIABLES}\n  warehouse_id:\n    description: \"Warehouse ID for dashboard execution\""
fi

# Construir valores de variáveis para targets
DEV_VARS="catalog: dev_catalog"
PROD_VARS="catalog: prd_catalog"

if [ "$CREATE_JOB" == "true" ]; then
    DEV_VARS="${DEV_VARS}\n      cluster_id: \"\""
    PROD_VARS="${PROD_VARS}\n      cluster_id: \"\""
fi

if [ "$CREATE_DASHBOARD" == "true" ]; then
    DEV_VARS="${DEV_VARS}\n      warehouse_id: \"\""
    PROD_VARS="${PROD_VARS}\n      warehouse_id: \"\""
fi

# Gerar databricks.yml
cat > "$PROJECT_DIR/databricks.yml" << YMLEOF
bundle:
  name: ${PROJECT_NAME}

$(echo -e "$INCLUDES")$(echo -e "$VARIABLES")

targets:
  dev:
    mode: development
    default: true
    workspace:
      root_path: ~/.bundle/\${bundle.name}/\${bundle.target}
    variables:
      $(echo -e "$DEV_VARS")

  prod:
    mode: production
    workspace:
      root_path: /Workspace/Shared/databricks-bundles/\${bundle.name}/prod
    variables:
      $(echo -e "$PROD_VARS")
YMLEOF

# Criar notebook principal
echo -e "  ${CYAN}[CRIANDO]${NC} src/notebook.py"
cat > "$PROJECT_DIR/src/notebook.py" << 'NOTEBOOKEOF'
# Databricks notebook source
# MAGIC %md
# MAGIC # Notebook Template
# MAGIC 
# MAGIC Este notebook foi criado pelo bundlepro.
# MAGIC 
# MAGIC ## Parametros
# MAGIC - catalog: Catalog do Unity Catalog
# MAGIC - environment: Ambiente (dev, prod)

# COMMAND ----------

# Parametros
dbutils.widgets.text("catalog", "dev_catalog")
dbutils.widgets.text("environment", "dev")

catalog = dbutils.widgets.get("catalog")
environment = dbutils.widgets.get("environment")

print(f"Catalog: {catalog}")
print(f"Environment: {environment}")

# COMMAND ----------

# Configurar catalog
spark.sql(f"USE CATALOG {catalog}")

# COMMAND ----------

# MAGIC %md
# MAGIC ## Seu codigo aqui
# MAGIC 
# MAGIC Edite este notebook conforme sua necessidade.

# COMMAND ----------

# Exemplo: listar schemas
display(spark.sql("SHOW SCHEMAS"))

# COMMAND ----------

# Exemplo: criar DataFrame
df = spark.createDataFrame([
    (1, "Exemplo 1"),
    (2, "Exemplo 2"),
    (3, "Exemplo 3")
], ["id", "descricao"])

display(df)
NOTEBOOKEOF

# Criar job se solicitado
if [ "$CREATE_JOB" == "true" ]; then
    create_job_file
fi

# Criar dashboard se solicitado
if [ "$CREATE_DASHBOARD" == "true" ]; then
    create_dashboard_file
    create_dashboard_json
fi

# Criar .gitignore
echo -e "  ${CYAN}[CRIANDO]${NC} .gitignore"
cat > "$PROJECT_DIR/.gitignore" << 'GITIGNOREEOF'
.databricks/
*.pyc
__pycache__/
.vscode/
.idea/
*.log
INSTRUCOES.txt
GITIGNOREEOF

# Criar README.md
create_readme

# Criar arquivo de instrucoes
create_instructions_file

# Obter branch atual para o resumo final
CURRENT_BRANCH=$(git branch --show-current 2>/dev/null || echo "N/A")

# Sucesso
echo ""
echo -e "${GREEN}========================================${NC}"
echo -e "${GREEN}Projeto criado com sucesso!${NC}"
echo -e "${GREEN}========================================${NC}"
echo ""
echo -e "${BLUE}Projeto:${NC}     ${PROJECT_NAME}"
echo -e "${BLUE}Localizacao:${NC} ${PROJECT_DIR}"
echo -e "${BLUE}Branch:${NC}      ${CURRENT_BRANCH}"
echo -e "${BLUE}Job criado:${NC}  $([ "$CREATE_JOB" == "true" ] && echo "Sim" || echo "Nao")"
echo -e "${BLUE}Dashboard criado:${NC}  $([ "$CREATE_DASHBOARD" == "true" ] && echo "Sim" || echo "Nao")"
echo ""

# PROXIMOS PASSOS
echo -e "${YELLOW}========================================${NC}"
echo -e "${YELLOW}PROXIMOS PASSOS${NC}"
echo -e "${YELLOW}========================================${NC}"
echo ""
echo -e "${GREEN}1. Entre no diretorio do projeto:${NC}"
echo ""
echo -e "${CYAN}   cd ${PROJECT_NAME}${NC}"
echo ""
echo -e "${GREEN}2. Edite os arquivos conforme necessario:${NC}"
echo ""
echo "   nano src/notebook.py"
if [ "$CREATE_JOB" == "true" ]; then
echo "   nano resources/jobs.yml"
fi
if [ "$CREATE_DASHBOARD" == "true" ]; then
echo "   nano resources/dashboards.yml"
echo "   nano src/dashboard.lvdash.json"
fi
echo "   nano databricks.yml"
echo ""
echo -e "${GREEN}3. Valide o bundle:${NC}"
echo ""
echo "   databricks bundle validate -t dev"
echo ""
echo -e "${GREEN}4. Commit e push:${NC}"
echo ""
echo "   git add ."
echo "   git commit -m 'Add: ${PROJECT_NAME}'"
echo "   git push origin ${CURRENT_BRANCH}"
echo ""
echo -e "${CYAN}DICA: Consulte ${PROJECT_NAME}/INSTRUCOES.txt para o passo a passo completo${NC}"
echo ""
